<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Getflix</title>
    <link rel="stylesheet" href="/styles/styleform.css" />
    <link rel="stylesheet" href="/styles/HeaderFooter.css" />
    <link rel="stylesheet" href="/styles/headerResponsive.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
    integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>
  <body>
    <div class="container">
      <div class="row-1">
        <!--Header -->
        <div class="header">
          <!--Logo -->
          <img
            class="logo"
            src="/Images/Getflix.png"
            href="login"
            alt="logo getflix"
          />
        </div>
        <div class="navDiv" id="navDiv"> <!--Navbar -->
            <ul class="navbar">
                
                <li><a href="/login">Login</a></li>
                <li class="home"><a href="/">Home</a></li>
              </ul>
        </div>
      </div>
      {{#if message}}
          <div class="message">
            <h1>{{message}}</h1>
          </div>
      {{/if}}
      <div class="HeroRow">
        <form action="" method="post">

            <div class="forminput">
            <label for="password" class="form-label">Password</label></br>
            <input type="password" class="form-control" id="lastname" name="password" required/>
            </div>

            <div class="forminput">
            <label for="passwordConfirm" class="form-label">Confirm Password</label></br>
            <input type="password" class="form-control" id="lastname" name="passwordConfirm" required/>
            </div>

            <div class="forminput">
            <button
                type="submit"
                class="btn btn-outline-danger position-relative"
                name="submit">
                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                </span>Reset password
                </button>
            </div>
        </form>
    </div>
      
    </div>

    <div class="headerResponsive">
      <ul class="navbar">
        <li><a href=""><i class="fa-solid fa-house"></i></a></li>
      <li><a href="/search"><i class="fa-solid fa-magnifying-glass"></i></a></li>
{{#if logged}}
        <li class="user">
          <h4>Hi, {{logged}}</h4>
          <div class="icon-user">
            <i class="fa-solid fa-user"></i>
            <div class="user-dropdown user-dropdown-hidden">
              <button id="myprofile">My&nbsp;profile</button>
              <form action="/auth/logout" method="post" style="display:flex; color: white; width: 100%">
                <button type="submit">Logout</button>
              </form>
              <form action="/myprofile/upgrade" method="post" style="display:flex; color: white; width: 100%">
                <button type="submit">Upgrade</button>
              </form>
              <form action="/myprofile/delete" method="post" style="display:flex; color: white; width: 100%">
                <button type="submit">Delete</button>
              </form>
            </div>
          </div>
        </li>
        {{else}}
        <li>
          <a href="login"><i class="fa-regular fa-user"></i></a>
        </li>
        {{/if}}

      </ul>
    </div>
    <script src="scripts/apifetch.js"></script>
  </body>
</html>